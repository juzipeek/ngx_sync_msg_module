ngx_addon_name=ngx_sync_msg_module
HTTP_MODULES="$HTTP_MODULES ngx_sync_msg_module"
HTTP_INCS="$HTTP_INCS $ngx_addon_dir/"
NGX_ADDON_SRCS="$NGX_ADDON_SRCS $ngx_addon_dir/ngx_sync_msg_module.c"
NGX_ADDON_DEPS="$NGX_ADDON_DEPS $ngx_addon_dir/ngx_sync_msg.h"

if [[ $HTTP_AUX_FILTER_MODULES == *ngx_http_lua_module* ]]; then
    echo "sync msg module support lua"
    have=NGX_SYNC_MSG_LUA . auto/have
fi